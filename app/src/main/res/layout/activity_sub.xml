<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity"
    android:background = "@color/green_2">

    <TextView
        android:id="@+id/generateBar"
        android:layout_width="411dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="PasswordGenerator"
        android:textColor="#737A63"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:background="@color/green"
        android:elevation="2dp"
        android:gravity="center"
        android:text="Confirm"
        android:textColor="@color/green_2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generateBar"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/generate"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:background="@drawable/text_border"
        android:elevation="2dp"
        android:gravity="center"
        android:text="Generate"
        android:textColor="@color/green"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/confirm"
        app:layout_constraintTop_toBottomOf="@+id/generateBar"
        tools:ignore="TextContrastCheck" />

    <ListView
        android:id="@+id/passwordList"
        android:layout_width="410dp"
        android:layout_height="645dp"
        android:layout_gravity="top"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm"
        app:layout_constraintVertical_bias="0.0"></ListView>

</androidx.constraintlayout.widget.ConstraintLayout>